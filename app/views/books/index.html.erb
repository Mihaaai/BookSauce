<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Abstract</th>
      <th>Summary</th>
      <th>Photo</th>
      <th>Shop</th>
      <th>Category</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title%></td>
        <td><%= book.abstract %></td>
        <td><%= book.summary %></td>
        <td><%= book.photo %></td>
        <td><%= book.shop %></td>
        <td><%= book.category.title %></td>
        <td><%= book.author.name %></td>
        <td><%= link_to 'Show', book %></td>        
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

